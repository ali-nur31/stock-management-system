<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="580.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom, #020617, #0f172a);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="stock.main.stock.controllers.StockController">

    <children>

        <!-- Верхний заголовок -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="70.0" prefWidth="900.0"
              style="-fx-background-color: rgba(15,23,42,0.95);">
            <children>
                <Text text="Stock Manager"
                      style="-fx-fill: #e5e7eb;"
                      wrappingWidth="300">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                </Text>

                <Text text="User inventory"
                      translateX="20.0"
                      style="-fx-fill: #9ca3af;">
                    <font>
                        <Font name="System" size="14.0" />
                    </font>
                </Text>
            </children>
            <padding>
                <Insets top="20" left="24" right="24" bottom="20"/>
            </padding>
            <spacing>8</spacing>
        </HBox>

        <!-- Центральная карточка -->
        <AnchorPane layoutX="30.0" layoutY="80.0" prefHeight="470.0" prefWidth="840.0"
                    style="-fx-background-color: #020617; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 24, 0, 0, 12);">

            <children>

                <VBox layoutX="28.0" layoutY="24.0" prefWidth="784.0" spacing="18.0">

                    <!-- Блок формы добавления -->
                    <VBox spacing="10.0">
                        <children>
                            <Text text="Add new product" style="-fx-fill: #e5e7eb;">
                                <font>
                                    <Font name="System Bold" size="20.0" />
                                </font>
                            </Text>

                            <HBox spacing="12.0">
                                <children>
                                    <TextField fx:id="nameField"
                                               promptText="Product name"
                                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                                      -fx-padding: 8 12; -fx-font-size: 13px;"
                                               prefWidth="220"/>

                                    <TextField fx:id="skuField"
                                               promptText="SKU"
                                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                                      -fx-padding: 8 12; -fx-font-size: 13px;"
                                               prefWidth="140"/>

                                    <TextField fx:id="supplierField"
                                               promptText="Supplier"
                                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                                      -fx-padding: 8 12; -fx-font-size: 13px;"
                                               prefWidth="180"/>

                                    <TextField fx:id="quantityField"
                                               promptText="Quantity"
                                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                                      -fx-padding: 8 12; -fx-font-size: 13px;"
                                               prefWidth="100"/>

                                    <Button text="Add"
                                            onAction="#addItem"
                                            style="-fx-background-radius: 10; -fx-background-color: #22c55e;
                                                   -fx-text-fill: white; -fx-font-size: 13px;
                                                   -fx-font-weight: bold; -fx-cursor: hand;"
                                            prefWidth="80"/>
                                </children>
                            </HBox>
                        </children>
                    </VBox>

                    <!-- Блок поиска и кнопок -->
                    <HBox spacing="10.0">
                        <children>
                            <TextField fx:id="searchField"
                                       promptText="Search by name, SKU, supplier or quantity"
                                       onKeyReleased="#searchProduct"
                                       style="-fx-background-radius: 10; -fx-border-radius: 10;
                                              -fx-border-color: #1f2937; -fx-background-color: #020617;
                                              -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                              -fx-padding: 6 12; -fx-font-size: 13px;"
                                       HBox.hgrow="ALWAYS"/>

                            <Button text="Edit"
                                    onAction="#editProduct"
                                    style="-fx-background-radius: 10; -fx-background-color: #f97316;
                                           -fx-text-fill: white; -fx-font-size: 13px;
                                           -fx-font-weight: bold; -fx-cursor: hand;"
                                    prefWidth="80"/>

                            <Button text="Delete"
                                    onAction="#deleteProduct"
                                    style="-fx-background-radius: 10; -fx-background-color: #ef4444;
                                           -fx-text-fill: white; -fx-font-size: 13px;
                                           -fx-font-weight: bold; -fx-cursor: hand;"
                                    prefWidth="80"/>
                        </children>
                    </HBox>

                    <!-- Таблица -->
                    <TableView fx:id="productsTable"
                               prefHeight="340.0"
                               style="-fx-background-color: #020617; -fx-background-radius: 12;
                                      -fx-border-radius: 12; -fx-border-color: #1f2937;
                                      -fx-table-cell-border-color: transparent; -fx-text-fill: #e5e7eb;">
                        <columns>
                            <TableColumn fx:id="colName" prefWidth="220" text="Name" />
                            <TableColumn fx:id="colSku" prefWidth="140" text="SKU" />
                            <TableColumn fx:id="colSupplier" prefWidth="200" text="Supplier" />
                            <TableColumn fx:id="colQuantity" prefWidth="120" text="Quantity" />
                        </columns>
                    </TableView>

                </VBox>

            </children>
        </AnchorPane>

    </children>

</AnchorPane>
