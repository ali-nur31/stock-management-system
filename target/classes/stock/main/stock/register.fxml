<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="380" prefWidth="480"
            style="-fx-background-color: linear-gradient(to bottom, #020617, #111827);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="stock.main.stock.controllers.RegisterController">

    <children>

        <VBox layoutX="90.0" layoutY="40.0" prefWidth="300.0" spacing="14.0"
              style="-fx-background-color: #020617; -fx-background-radius: 18;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 22, 0, 0, 10);">
            <padding>
                <Insets top="24" left="24" right="24" bottom="24"/>
            </padding>

            <children>

                <Label text="Create account"
                       textFill="#e5e7eb">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>

                <Label text="Start tracking your stock"
                       textFill="#9ca3af">
                    <font>
                        <Font name="System" size="12.0" />
                    </font>
                </Label>

                <TextField fx:id="usernameField"
                           promptText="Username"
                           style="-fx-background-radius: 10; -fx-border-radius: 10;
                                  -fx-border-color: #1f2937; -fx-background-color: #020617;
                                  -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                  -fx-padding: 8 12; -fx-font-size: 13px;" />

                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                      -fx-padding: 8 12; -fx-font-size: 13px;" />

                <PasswordField fx:id="confirmPasswordField"
                               promptText="Confirm password"
                               style="-fx-background-radius: 10; -fx-border-radius: 10;
                                      -fx-border-color: #1f2937; -fx-background-color: #020617;
                                      -fx-text-fill: #e5e7eb; -fx-prompt-text-fill: #6b7280;
                                      -fx-padding: 8 12; -fx-font-size: 13px;" />

                <Button text="Register"
                        onAction="#onRegister"
                        style="-fx-background-color: #22c55e; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-font-size: 14px;
                               -fx-font-weight: bold; -fx-cursor: hand;"
                        maxWidth="Infinity"/>

                <Hyperlink text="I already have an account"
                           onAction="#goToLogin"
                           style="-fx-text-fill: #60a5fa; -fx-font-size: 12px; -fx-border-color: transparent;"
                           maxWidth="Infinity"/>

            </children>
        </VBox>

    </children>

</AnchorPane>
